#include "main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * _strdup - duplicate to a new location
 * @str: char
 * Return value: 0
 */

char *_strdup(char *str)
{
	char *p;
	int i, z = 0;

	if (str == NULL)
		return (NULL);
	i = 0;
	while (str[i] != '\0')
		i++;

	p = malloc(sizeof(char) * (i + 1));

	if (p == NULL)
		return (NULL);

	for (z = 0; str[z]; z++)
		p[z] = str[z];

	return (p);
}
