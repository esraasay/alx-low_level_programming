/**
 * _strdup - duplicate to a new location
 * @str: char
 * Return value: 0
 */


char *_strdup(char *str)
{
	char *p;
	int i, y = 0;

	if (str == NULL)
		return (NULL);
	i = 0;
	while (str[i] != '\0')
		i++;

